# Database
DATABASE_URL="postgresql://user:password@localhost:5432/breachfeed"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=notifications@breachfeed.com

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Apple Push Notifications
APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourcompany.breachfeed
APNS_KEY_PATH=./config/AuthKey.p8

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# WordPress Plugin
WORDPRESS_API_KEY=generated-api-key-for-wordpress-plugin

# Content Fetching
ENABLE_FULL_CONTENT_FETCH=true
CONTENT_FETCH_TIMEOUT=30000
CONTENT_FETCH_RATE_LIMIT=1000